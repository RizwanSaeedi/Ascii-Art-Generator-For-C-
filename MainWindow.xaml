                Click='button1_Click'
                Content='GET ASCII C++ CODE'
                FontSize='30'
                HorizontalAlignment='Left'
                Margin='385,226,0,0'
                VerticalAlignment='Top'
                Width='340' />
        <Label x:Name='label'
               Content='ASCII GENERATOR FOR C++'
               FontSize='20'
               HorizontalAlignment='Left'
               Margin='427,10,0,0'
               VerticalAlignment='Top' />
        <Label x:Name='label_Copy'
             
               Content='ENTER INPUT AND CLICK GET BUTTON'
               FontSize='20'
               HorizontalAlignment='Left'
               Margin='26,75,0,0'
               VerticalAlignment='Top'
               Height='55' />
    </Grid>
</Window>
